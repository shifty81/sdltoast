{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "harvestquest.tile.v1",
  "title": "Harvest Quest Tile Definition",
  "description": "Schema for Harvest Quest tile type definitions",
  "type": "object",
  "required": ["schema", "tiles"],
  "properties": {
    "schema": {
      "type": "string",
      "const": "harvestquest.tile.v1"
    },
    "tiles": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "name"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["VOID", "FLOOR", "WALL", "DOOR", "WATER", "SOIL", "CROP", "GRASS", "DIRT", "STONE", "SAND", "DECORATION", "TREE"]
          },
          "name": {
            "type": "string",
            "description": "Human-readable tile name"
          },
          "solid": {
            "type": "boolean",
            "default": false,
            "description": "Whether the tile blocks movement"
          },
          "breakable": {
            "type": "boolean",
            "default": false,
            "description": "Whether the tile can be destroyed"
          },
          "farmable": {
            "type": "boolean",
            "default": false,
            "description": "Whether the tile supports crop planting"
          }
        }
      }
    }
  }
}
